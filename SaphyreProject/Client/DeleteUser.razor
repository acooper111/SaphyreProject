@page "/user/delete/{userId:guid}"
@using SaphyreProject.Shared.Models
@inject HttpClient Http
@inject NavigationManager NavigationManager
<h2>Delete User</h2>
<br />
<div class="form-group">
    <h4>Do you want to delete this user?</h4>
    <table class="table">
        <tbody>
        <tr>
            <td>Username</td>
            <td>@user.Username</td>
        </tr>
        <tr>
            <td>Name</td>
            <td>@user.Name</td>
        </tr>
        <tr>
            <td>E-mail</td>
            <td>@user.Email</td>
        </tr>
        </tbody>
    </table>
</div>
<div class="form-group">
    <input type="submit" value="Delete" @onclick="(async () => await RemoveUser(user.Userid))" class="btn btn-danger" />
    <input type="submit" value="Cancel" @onclick="(() => Cancel())" class="btn btn-warning" />
</div>
@code {
    [Parameter]
    public Guid userId { get; set; }
    User user = new User();
    protected override async Task OnInitializedAsync()
    {
        user = await Http.GetFromJsonAsync<User>("/api/User/" + userId);
    }
    protected async Task RemoveUser(Guid userID)
    {
        await Http.DeleteAsync("api/User/" + userID);
        NavigationManager.NavigateTo("/userdetails");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("/userdetails");
    }
}